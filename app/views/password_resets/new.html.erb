<% provide(:title, "Forgot password") %>


<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <h3>Forgot password</h3>
    <%= simple_form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.input :email, placeholder: "user@domain.com", autofocus:true, class: 'form-control' %>

      <%= f.button :submit, "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
