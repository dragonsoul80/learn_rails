<% content_for :title do %>Edit User<% end %>
<% content_for :description do %>Edit User<% end %>


<div class="row">

   <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
        <div class = "row">
          <div class="col-md-4">
            <%= f.input :first_name, autofocus:true %>
          </div>
          <div class="col-md-4">
            <%= f.input :last_name %>
          </div>
        </div>
          <div class ="row">
            <div class ="col-md-8">
              <%= f.input :email %>
              <%= f.input :password, placeholder: "Password" %>
              <%= f.input :password_confirmation, placeholder: "Password Confirmation" %>
              <%= f.button :submit, "Save changes", class: "btn btn-primary form-actions" %>
      <% end %>
            </div>
          </div>
        <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails" target="_blank">change</a>
        </div>
  </div>

</div>
