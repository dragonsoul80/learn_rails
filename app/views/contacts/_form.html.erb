<% content_for :title do %>Contact<% end %>

<!-- Modal -->

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">

        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title" id="myModalLabel">Contact Me ;)</h2>
      </div>
      <%= simple_form_for @contact, remote: true do |f| %>
      <div class="modal-body">
        <%= render 'layouts/messages' %>
        <%= f.error_notification %>
        <div class="row social-contact">
            <div class="col-md-6">
              <ul>
                <i class="fa fa-facebook-official fa-2x"> Facebook </i>
                <i class="fa fa-linkedin-square fa-2x"> LinkIn </i>
                <i class="fa fa-instagram fa-2x"> Instagram </i>
            </div>

            <div class="col-md-5">
          		<%= f.input :name, class: 'form-control input-lg', autofocus:true%>
          		<%= f.input :email, class: 'form-control input-lg' %>
          		<%= f.input :content, as: :text, class: 'form-control input-lg' %>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.button :submit, 'Send', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<% end %>
