<% content_for :title do %>Newsletter Subscription<% end %>

<div class="row">

	<div class="col-md-3 col-md-offset-3">
		<h1>Stay in touch.</h1>
	   	<%= simple_form_for @visitor do |f| %>
			<%= f.error_notification %>
			<%= f.input :email, label: false, :placeholder => 'Your email address...' %>
			<%= f.button :submit, "Sign up for the newsletter", :class => "btn btn-primary" %>
		<% end %>
	   
	</div>
</div>
